{
  "manifest_version": 2,

  "name": "Metrication",
  "description": "Convert imperial values to their metric equivalents, and enter the 21st century. Imperial units still available on hover.",
  "version": "1.0",

  "icons": {"16": "icon16.png",
	"48": "icon48.png",
	"128": "icon128.png"},

   "browser_action": {
	"default_icon": "icon48.png",
	"default_popup": "popup.html"
    },

    "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"],
      "css": [],
      "js": ["/js/Main.js"]
    }
  ]
 
}
